<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClientFragment">

    <TextView
        android:id="@+id/clientStateView"
        style="@style/info_view"
        android:text="@string/ktor_client_state_inactive" />

    <Button
        android:id="@+id/accessibilityServiceButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Состояние службы поддержки доступности" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#66BB6A"
        android:text="@string/button_connect_to_server" />

    <Button
        android:id="@+id/disconnectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF7043"
        android:text="@string/button_disconnect_from_server" />

    <Button
        android:id="@+id/readGesturesButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#26C6DA"
        android:text="@string/button_read_gestures" />

    <TextView
        android:id="@+id/errorView"
        style="@style/error_view"
        tools:visibility="visible"/>

</LinearLayout>